      (pass-if "char"  (eq? #f (array? char  	  1/3)))
      (pass-if "byte"  (eq? #f (array? byte  	  1/3)))
      (pass-if "short" (eq? #f (array? short 	  1/3)))
      (pass-if "ulong" (eq? #f (array? ulong 	  1/3)))
