	  (pass-if "longlong" (eq? #f (array? longlong -1))))
      (pass-if "float"   (eq? #f (array? float    -1)))
      (pass-if "double"  (eq? #f (array? double   -1)))
      (pass-if "complex" (eq? #f (array? complex  -1)))
      (pass-if "scm"     (eq? #f (array? scm      -1))))

    (with-test-prefix "is long long"
