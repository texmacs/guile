      (pass-if "char"  (eq? #f (array? char  	  -1)))
      (pass-if "byte"  (eq? #f (array? byte  	  -1)))
      (pass-if "short" (eq? #f (array? short 	  -1)))
      (pass-if "ulong" (eq? #f (array? ulong 	  -1)))
      (pass-if "long"  (eq? #t (array? long  	  -1)))
